<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/trailerImg"
        android:layout_width="@dimen/Thumbnail_layout_width"
        android:layout_height="@dimen/Thumbnail_layout_height"
        android:layout_margin="@dimen/youtube_img_thumb_margin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/youtube_img_thumb_padding"
        android:scaleType="centerCrop"
        tools:src="@drawable/user_placeholder_error" />

</RelativeLayout>