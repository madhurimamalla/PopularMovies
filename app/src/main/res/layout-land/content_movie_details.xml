<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.android.popmoviestwo.MovieDetailsActivity">

    <TextView
        android:id="@+id/movie_orig_title"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:padding="5dp"
        android:textColor="@color/Purple"
        android:textSize="25sp"
        tools:text="Movie original title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.501" />

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="@android:color/white"
        android:layout_weight="0.27"
        android:id="@+id/cardView"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">
    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/movie_image_large"
        android:layout_width="257dp"
        android:layout_height="260dp"
        android:layout_gravity="center"
        android:layout_weight="0.66"
        android:contentDescription="@string/content_description"
        android:scaleType="center"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/movie_orig_title"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/movie_overview"
        android:layout_width="118dp"
        android:layout_height="104dp"
        tools:text="Movie overview"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toBottomOf="@+id/movie_orig_title"
        app:layout_constraintLeft_toRightOf="@+id/movie_image_large"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp" />

    <TextView
        android:id="@+id/movie_user_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Movie user rating"
        android:fontFamily="sans-serif"
        app:layout_constraintLeft_toLeftOf="@+id/movie_overview"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/movie_overview" />

    <TextView
        android:id="@+id/movie_release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="movie_release_date"
        android:fontFamily="sans-serif"
        app:layout_constraintLeft_toLeftOf="@+id/movie_user_rating"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toBottomOf="@+id/movie_user_rating" />


